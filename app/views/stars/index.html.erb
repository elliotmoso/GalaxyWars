<h1>Listing stars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>X</th>
    <th>Y</th>
    <th>Z</th>
    <th>Mass</th>
    <th>Radium</th>
    <th>Luminosity</th>
    <th>Temp</th>
    <th>Color</th>
    <th>Clase</th>
    <th>User</th>
    <th>Aliance</th>
    <th>Near</th>
    <th>Intern line</th>
    <th>Hot line</th>
    <th>Snow line</th>
    <th>Cool line</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stars.each do |star| %>
  <tr>
    <td><%= star.name %></td>
    <td><%= star.x %></td>
    <td><%= star.y %></td>
    <td><%= star.z %></td>
    <td><%= star.mass %></td>
    <td><%= star.radium %></td>
    <td><%= star.luminosity %></td>
    <td><%= star.temp %></td>
    <td><%= star.color %></td>
    <td><%= star.clase %></td>
    <td><%= star.user_id %></td>
    <td><%= star.aliance_id %></td>
    <td><%= star.near %></td>
    <td><%= star.intern_line %></td>
    <td><%= star.hot_line %></td>
    <td><%= star.snow_line %></td>
    <td><%= star.cool_line %></td>
    <td><%= link_to 'Show', star %></td>
    <td><%= link_to 'Edit', edit_star_path(star) %></td>
    <td><%= link_to 'Destroy', star, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

