    <td><%= link_to moon.planet,moon_planet %></td>
    <td><%= moon.position %></td>
    <td><%= moon.mass %></td>
    <td><%= moon.tipo %></td>
    <td><%= moon.atmosphere %></td>
    <td><%= moon.metal %></td>
